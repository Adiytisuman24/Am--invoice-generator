{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.cjs", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/(.*)", "dest": "/api/index.cjs" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/index.cjs": { "runtime": "nodejs18.x", "maxDuration": 10, "memory": 1024 },
    "api/health.js": { "runtime": "nodejs18.x", "maxDuration": 5, "memory": 128 }
  }
}
{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/index.js": { "memory": 1024, "maxDuration": 10 }
  }
}
